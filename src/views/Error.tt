                <p>
                    (:msg:)
                </p>
                (:end:)
            </div>
    </div>
</div>
<div class="ui vertical segment padded">
</div>
<div class="ui vertical segment very padded">
</div>
<div class="ui vertical segment very padded">
</div>

(:end:)